.taste
    opacity 1
    width 100%
    background-position top center
    background-size cover
    // outline 1px solid red
    // @media (max-width size-tablet)
    //     margin-top -15vh
    // @media (max-width size-tablet)
    //     margin-top -25vh
    .container
        padding-top 35vh
        padding-bottom 250px
        height 100%
        display grid
        align-content center
        grid-template-columns repeat(12, 1fr)
        grid-template-areas "content content content content content 0 0 0 0 0 0 0"
        @media (max-width size-notebook)
            padding-top 30vh
            padding-bottom 200px
        @media (max-width size-tablet)
            padding-top 18vh
            padding-bottom 125px
        @media (max-width size-mobile)
            grid-template-columns 1fr
            grid-template-areas "content"
            padding-top 15vh
            padding-bottom 100px
        .content
            grid-area content
            display grid
            grid-gap em(45)
            h2
                padding 0
                margin 0
                text-transform uppercase
                font-size em(58px)
                font-weight 700
                letter-spacing em(1.2)
                line-height 1.13em
                text-shadow 0px 0px 40px rgba(0, 0, 0, 0.66)
                @media (max-width size-notebook)
                    font-size em(48px)
                @media (max-width size-tablet)
                    font-size em(50px)
            .btn
                width 80%
                @media (max-width size-notebook)
                    width 70%
            .tasting
                background-color $color.accent1 !important
                opacity 1
                &:hover 
                    background-color $color.white !important
                    opacity 1