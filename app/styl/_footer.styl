footer
    background #232C39
    padding em(90) 0 em(120) 0
    @media ( max-width size-mobile )
        padding em(24) 0
    header
        margin-bottom em(80)
        @media (max-width size-mobile)
            margin-bottom (30)
        .content
            padding-top em(46)
            display grid
            grid-template-columns 1fr auto 1fr
            align-items center
            grid-gap em(196)
            @media (max-width size-notebook)
                grid-gap em(90)
                padding-top em(26)
            @media (max-width size-tablet)
                grid-gap em(54)
                padding-top em(26)
            @media ( max-width size-mobile )
                grid-template-columns 1fr 
                grid-gap em(0)
            .logo
                transition transform 300ms ease-in-out
                //margin-right em(-24)
                @media ( max-width size-notebook )
                    margin-top em(0)
                    height em(45px)
                @media ( max-width size-tablet )
                    height 30px
                &:hover
                    transform scale(1.1)
            .nav
                @media ( max-width size-mobile )
                    display none
                ul
                    margin 0
                    padding 0
                    list-style none
                    display grid
                    grid-template-columns auto auto auto
                    grid-gap em(115)
                    @media ( max-width size-notebook )
                        grid-gap em(75)
                    @media (max-width size-tablet)
                        grid-gap em(55)
                    li
                        margin 0
                        padding 0
                        display inline-block
                        letter-spacing em(1)
                        &.icons
                            &:hover
                                a
                                    color $color.gray
                            .social-icons
                                display grid
                                grid-template-columns auto auto
                                justify-content end
                                grid-gap em(40)
                                @media (max-width size-tablet)
                                    grid-gap em(20)
                                .icon
                                    color $color.gray
                                    svg
                                        height em(20px)
                                        width em(20px)
                                        @media ( max-width size-notebook )
                                            height em(18px)
                                            width em(18px)
                                    &:hover
                                        color $color.white !important
                        &:hover
                            a
                                color $color.white
                        a
                            font-size em(19px)
                            font-family Din-Pro2, sans-serif
                            font-weight 500
                            letter-spacing em(0.1)
                            text-transform uppercase
                            color $color.gray
                            text-decoration none
                            transition color 300ms ease-in-out
                            @media (max-width $size-tablet)
                                font-size em(14px)
    .bottom
        margin-top em(36)
        color $color.gray
        display grid
        align-items center
        grid-template-columns 1fr 1fr 1fr
        line-height 1.2em
        @media (max-width size-tablet)
            grid-gap em(20)  
            grid-template-columns auto 1fr auto
        @media (max-width size-mobile)
            grid-template-columns 1fr
            margin-top em(0)
            grid-template-areas "contact" "age" "copyright"
        p
            margin 0
            padding 0
            span
                color $color.gray
        .copyright
            opacity 1
            @media (max-width size-mobile) 
                grid-area copyright
                display grid
                grid-template-columns 1fr 1fr
            .social-icons
                display none
                a
                    color $color.white
                @media (max-width size-mobile)
                    display grid
                    justify-self end
                    grid-template-columns 1fr 1fr
                    grid-gap em(40)
        .age
            @media (max-width size-mobile) 
                grid-area age
            align-items center
            display grid
            grid-template-columns auto 1fr auto
            grid-gap em(40)
            @media (max-width size-tablet)
                grid-gap em(20)
            img
                opacity .15
                @media (max-width size-tablet)   
                    display none
            p
                color #C5D6E0
                opacity .43
                @media (max-width size-tablet) 
                    font-size em(14)
                @media (max-width size-mobile)
                    font-size em(15)
                    color #9F999F
        .contact
            justify-self end
            text-align right
            @media (max-width size-mobile)
                grid-area contact
                justify-self start
                text-align left