@import _config

// CUSTOM USER STYLES & IMPORTS
.container
    max-width 1440px
    margin 0 auto
    padding 0 28px
    @media ( max-width size-notebook )
        max-width 1200px
        padding 0 24px
        font-size 14px
    @media ( max-width size-tablet )
        max-width 768px
        padding 0 24px
    @media ( max-width size-mobile )
        width 100%
        padding 0 20px


.btn
    display grid
    padding em(8px) 0
    width 100%
    text-align center
    font-size em(35)
    letter-spacing em(1.2)
    color $color.accent1
    font-weight 500
    text-transform uppercase !important
    text-decoration none !important
    align-items center
    background-color #203953
    transition background-color 300ms ease-in-out
    position relative
    &::before
        position absolute
        width 98%
        height 90%
        content ""
        border 3px solid $color.accent1
        margin 5% 1%
    @media ( max-width size-notebook )
        padding em(6px) 0
        font-size em(28)
    @media ( max-width size-tablet )
        font-size em(20)
.btn:hover
    color $color.dark1
    background-color $color.accent1
.btn:hover::before
    border 3px solid $color.dark1


.btn-accent
    color $color.dark1 !important
    background-color #fff !important
    text-transform uppercase
    @media ( max-width size-notebook )
        padding em(6px) 0
        font-size em(28)
    @media ( max-width size-tablet )
        font-size em(20)
.btn-accent:hover
    color $color.accent1 !important
.btn-accent::before
    border 3px solid $color.dark1
.btn-accent:hover::before
    border 3px solid $color.accent1




