@import _colors
@import _size

// USER VARIABLES SECTION

accent = $color.accent2 // Accent Color
fontsize = 16px // Body Font Size
textcolor = $color.dark // Text Color
lineheight = 1.65 // Document Line Height
userfont = NeutraText, sans-serif // User Font Family
systemfont = -apple-system, BlinkMacSystemFont, Arial, sans-serif // System Font Family

// IMPORT SECTION

@import '/node_modules/bootstrap/dist/css/bootstrap-reboot.min.css' // Bootstrap Reboot collection
// @import '/node_modules/bootstrap/dist/css/bootstrap-grid.min.css' // Optional Bootstrap Grid

em(fontSize, baseFontSize = fontsize)
	(fontSize / baseFontSize)em

// FONTS LOAD SECTION

font(fname, fstyle, fweight, furl)
	@font-face
		font-family fname
		font-style fstyle
		font-weight fweight
		src local(fname), url(furl) format('woff2')
		// font-display swap // Uncomment to initially display system fonts

font('NeutraText', normal, 400, '../fonts/neutratext-book.woff2')
font('NeutraText', normal, 700, '../fonts/neutratext-bold.woff2')

font('Bodoni2', normal, 400, '../fonts/bodoni72c-webfont.woff2')
font('Bodoni2', normal, 700, '../fonts/bodoni72c-bold-webfont.woff2')
// GENERAL DOCUMENT STYLES

::placeholder
	color #666

::selection
	background-color accent
	color #fff

input, textarea
	outline none
	&:focus:required:invalid
		border-color red
	&:required:valid
		border-color green

body
	font-family userfont
	font-size fontsize
	line-height lineheight
	color textcolor
	min-width 320px
	position relative
	overflow-x hidden
